<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.formatted_price %>
</p>

<h3>Wynthoughts</h3>

<div class="bigrow">
<% @product.reviews.each do |review| %>
  <div class="proddetails">
    <div class="reviewrow">
     <div class="reviewitem"><%= review.comment %></div>
     <div class="reviewitem"><font color="white"><em>Added on <%= time_ago_in_words review.created_at %> ago</em></font></div>
    </div>
  </div>
<% end %>
</div>


<h3>New Wynthought</h3>
<%= render 'reviews/form', review: @review %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
