<h1>Products</h1>

<table>
  <thead>
    <tr>
      <!-- <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th> -->
    </tr>
  </thead>
</table>
  <!-- <tbody> -->

<div class="bigrow">
    <% @products.each do |product| %>
        <div class="proddetails">
        <div class="prodrow">
                              <% mystring = "<img height=160px width=100 src=" + product.image_link.to_s + ">" %>
        <div class="prodimg"><%= mystring.html_safe %></div>
        <div class="prodname"><h3><%= product.name %></div></h3>
        <div class="proddesc"><%= product.description %></div>
        <div class="prodprice"><%= product.formatted_price %></div>
        </div>
        <div class="prodcontrol">
        <%= link_to 'Details', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        <br>Product Reviews: <%= product.reviews.length%>
        </div>
      </div>
    <% end %>
</div>
